<p id="notice"><%= notice %></p>
<h4><%= link_to 'Add a new photo', new_photo_path %></h4>
<h1>Where we are.</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <% if location.photos.length > 0 %>
          <td><%= image_tag location.photos.first.image.thumb %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
