<p id="notice"><%= notice %></p>

<h1>Pics from all around the world.</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%#= link_to 'Add a new photo', new_photo_path(photo) %>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <% if location.photos.length > 0 %>
          <td><%= image_tag location.photos.first.image.thumb %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
