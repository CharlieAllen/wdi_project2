<p id="notice"><%= notice %></p>

<h1>Pics from all around the world</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= image_tag location.image.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
