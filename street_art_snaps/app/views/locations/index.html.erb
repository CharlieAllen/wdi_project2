<p id="notice"><%= notice %></p>

<h2>Places.</h2><br>
<%= link_to 'Add a picture', new_photo_path %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <% if location.photos.length > 0 %>
          <td><%= image_tag location.photos.first.image.thumb %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
